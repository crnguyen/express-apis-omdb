<% // Render individual movie details here %>
<% // This is how to do comments in EJS, by the way... %>
<h2>IMDB</h2>

<div>
    <h1><%= data.Title%></h1>
    <img src="<%=data.Poster%>" alt="<%=data.title  %> Poster">
    <p>Plot: <%= data.Plot %> </p>
    <p>Genre: <%= data.Genre %> </p>
    <p>Release Date: <%= data.Released %></p>
    <p>Director: <%= data.Director %> </p>
    <p>Actors: <%= data.Actors %> </p>
    <p>Awards: <%= data.Awards %> </p>
    <p><%= data.Ratings[1].Source %> rating is <%= data.Ratings[1].Value %> </p>
</div>

<div>
<form method="POST" action="/fave">
    <input hidden type="text" name="title" id="title" value="<%= data.Title %>">
    <input hidden type="text" name="imdbId" id="imdbId" value="<%=data.imdbID%>">
    <button class="btn btn-primary" id="button" type="submit">Add to Favorite Movies</button>
</form>
</div>
